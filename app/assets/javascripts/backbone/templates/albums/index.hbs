{{#each albums}}
<li>
  <img src="{{cover}}" />
  <h2>{{title}}</h2>
  <h3>{{artist}}</h3>
  <p>Released: {{date}}</p>
  <p>Price: ${{format_price price}}</p>{{!-- See registerHelper in app.js --}}
  </br>
  <a href="{{songs_url}}" class="btn">Check out songs</a>
  </br>
  <a href="{{edit_album}}">Update "{{title}}"</a>
  </br>
  <a href="{{delete_album}}" method="delete">Delete "{{title}}"</a>
</li>
{{/each}}

